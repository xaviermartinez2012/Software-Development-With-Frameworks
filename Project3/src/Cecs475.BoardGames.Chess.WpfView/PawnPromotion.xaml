<Window x:Class="Cecs475.BoardGames.Chess.WpfView.PawnPromotion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cecs475.BoardGames.Chess.WpfView"
        mc:Ignorable="d"
        Height="90" Width="465">
    <StackPanel Orientation="Horizontal">
        <Label VerticalAlignment="Center" Content="Promote Pawn To:"/>
        <Button x:Name="Rook" Click="Button_Click"/>
        <Button x:Name="Knight" Click="Button_Click"/>
        <Button x:Name="Bishop" Click="Button_Click"/>
        <Button x:Name="Queen" Click="Button_Click"/>
    </StackPanel>
    
</Window>
